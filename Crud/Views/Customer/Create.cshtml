@model Crud.Models.Customer

<h2>Create Customer</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="NameStyle">Name Style:</label>
        <input asp-for="NameStyle" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Title">Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="MiddleName">Middle Name:</label>
        <input asp-for="MiddleName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Suffix">Suffix:</label>
        <input asp-for="Suffix" class="form-control" />
    </div>

    <div class="form-group">
        <label for="CompanyName">Company Name:</label>
        <input asp-for="CompanyName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="SalesPerson">Sales Person:</label>
        <input asp-for="SalesPerson" class="form-control" />
    </div>

    <div class="form-group">
        <label for="EmailAddress">Email Address:</label>
        <input asp-for="EmailAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label for="PasswordHash">Password Hash:</label>
        <input asp-for="PasswordHash" class="form-control" />
    </div>

    <div class="form-group">
        <label for="PasswordSalt">Password Salt:</label>
        <input asp-for="PasswordSalt" class="form-control" />
    </div>

    <div class="form-group">
        <label for="RowGuid">Row Guid:</label>
        <input asp-for="RowGuid" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ModifiedDate">Modified Date:</label>
        <input asp-for="ModifiedDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
